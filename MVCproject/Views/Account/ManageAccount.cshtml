@model ApplicationUser

<h2>Edit Account</h2>

<form asp-action="EditAccount" method="post" enctype="multipart/form-data">

    <!-- Hidden field for the user ID -->
    <input type="hidden" asp-for="Id" />

    <!-- Email is displayed but cannot be edited -->
    <div class="form-group">
        <label>Email:</label>
        <p>@Model.Email</p> <!-- Display the email without a form input -->
    </div>

    <!-- Username -->
    <div class="form-group">
        <label asp-for="UserName">Username:</label>
        <input asp-for="UserName" class="form-control" />
        <span asp-validation-for="UserName" class="text-danger"></span>
    </div>

    <!-- Phone Number -->
    <div class="form-group">
        <label asp-for="PhoneNumber">Phone Number:</label>
        <input asp-for="PhoneNumber" class="form-control" />
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>

    <!-- Address -->
    <div class="form-group">
        <label asp-for="Address">Address:</label>
        <input asp-for="Address" class="form-control" />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>

    <!-- Profile Photo -->
    <div class="form-group">
        <label>Profile Picture:</label>
        @if (Model.ProfilePicture != null && Model.ProfilePicture.Length > 0)
        {
            <!-- Display current profile picture if available -->
            <img src="data:image/jpeg;base64,@Convert.ToBase64String(Model.ProfilePicture)" alt="Profile Picture" class="img-thumbnail" style="width: 150px; height: 150px; object-fit: cover;" />
        }
        <input asp-for="ProfilePicture" class="form-control" type="file" name="profilePhoto" />
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>
